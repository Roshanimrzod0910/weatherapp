<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.weatherapp.WeatherAppController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <TextField fx:id="cityTextField" promptText="Enter city name"/>
        <Button fx:id="getWeatherButton" text="Get Weather"/>
        <Label fx:id="weatherInfoLabel"/>
    </children>
</VBox>
